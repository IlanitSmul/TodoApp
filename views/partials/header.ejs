        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                <% if(!currentUser){ %>
                <li class="nav-item">
                    <a class="nav-link mx-1" href="/login">
                        <i class="fas fa-sign-in-alt pr-1"></i> Login
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mx-1" href="/register">
                        <i class="fas fa-user-plus pr-1"></i> Register
                    </a>
                </li>
                <% } else { %>
                <li class="nav-item">
                    <a class="nav-link mx-1" href="#">
                        <em> Signed In As <%= currentUser.username %>
                        </em>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mx-1" href="/logout">
                        <i class="fas fa-sign-out-alt pr-1"></i> Logout
                    </a>
                </li>
                <% } %>
            </ul>
        </div>

    </nav>

