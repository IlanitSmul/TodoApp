<%- include ("../partials/header"); %>

<% var statusOptions = 
[ { id: "next-up", name: "Next Up" }, 
{ id: "in-progress", name: "In Progress" },               
{ id: "complete", name: "Complete" } ]; %>

<% var priorityOptions = 
[ { id: "high",    name: "High" }, 
{ id: "medium",  name: "Medium" },               
{ id: "low",     name: "Low" } ]; %>

<div class="container">

    <!-- list overview -->
    <header class="jumbotron">
        <div class="container">

            <!-- list overview: page title / list size / last update date -->
            <h1>Welcome To "<%= list.name %>" List!</h1>
            <p> size: <%= list.tasks.length %> </p>
            <p> lastUpdateDate: <%= list.lastUpdateDate  %> </p> <!-- todo: update also in tasks updates -->

            <!-- add task / edit list / delete list buttons -->
            <div style="display: flex;">
                <a class="btn btn-primary" href="/lists/<%= list._id %>/tasks/new">Add New Task</a>
                <a class="btn btn-xs btn-warning" href="/lists/<%= list._id %>/edit">Edit List</a>
                <form class="delete-form" action="/lists/<%= list._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-xs btn-danger">Delete List</button>
                </form>
            </div>

        </div>
    </header>

    <!-- list tasks -->
    <div class="row row-cols-1 row-cols-md-3">

        <% statusOptions.forEach(function(status){ %>

        <div class="col">

            <div class="d-flex flex-row my-2">

                <!-- title of column: "statusOptions" todo: use "p" instead of "button" -->
                <div>
                    <button type="button" class="btn btn-md status-btn-title status-btn-<%= status.id %>">
                        <%= status.name %>
                    </button>
                </div>

                <!-- num of tasks in column todo: use "p" instead of "button" -->
                <div>
                    <button type="button" class="btn btn-md status-btn-number">
                        <%= 
                        list.tasks.filter(function(task){ 
                            return task.status === status.name;
                        }).length;
                    %>
                    </button>
                </div>

                <!-- add task "+" buttom (to the specific column) -->
                <div class="ml-auto">
                    <form action="/lists/<%= list._id %>/tasks/new_task" method="POST">
                        <input type="hidden" name="status" value="<%= status.id %>">
                        <button type="submit" class="btn btn-sm status-btn-plus" data-toggle="tooltip"
                            data-placement="top" title="Create new task">
                            <i class="fas fa-plus"></i>
                        </button>
                    </form>
                </div>

            </div>

            <!-- task -->
            <% list.tasks.forEach(function(task){ %>
            <% if (task.status === status.name) { %>
            <div class="card mb-4">
                <div class="card-body">

                    <h5 class="card-title">
                        <div class="d-flex justify-content-between">

                            <!-- task title -->
                            <div class="d-flex">
                                <%= task.title %>
                                <!-- todo: need title over the 2 buttons -->
                            </div>

                            <div class="d-flex justify-content-end">

                                <!-- edit task button -->
                                <a class="btn btn-md py-0 by-0 align-top"
                                    href="/lists/<%=list._id %>/tasks/<%=task._id %>/edit" data-toggle="tooltip"
                                    data-placement="top" title="Edit task">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <!-- delete task button -->
                                <form class="delete-form "
                                    action="/lists/<%=list._id %>/tasks/<%=task._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-md py-0 by-0 align-top" data-toggle="tooltip"
                                        data-placement="top" title="Delete task">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>

                            </div>
                        </div>
                    </h5>

                    <p class="card-text"><%= task.description %></p>
                    <p class="card-text <%= task.priority %>"><%= task.priority %></p>

                </div>

                <!-- task due date -->
                <div class="card-footer">
                    <small class="text-muted">Dua Date: <%= task.dueDate %></small>
                </div>

            </div>
            <% } %>
            <% }) %>

        </div>
        <% }) %>
    </div>

</div>

<%- include ("../partials/footer"); %>