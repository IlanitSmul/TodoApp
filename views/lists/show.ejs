<%- include ("../partials/header"); %>

<% var statusOptions = 
[ { id: "next-up", name: "Next Up" }, 
{ id: "in-progress", name: "In Progress" },               
{ id: "complete", name: "Complete" } ]; %>

<% var priorityOptions = 
[ { id: "high",    name: "High" }, 
{ id: "medium",  name: "Medium" },               
{ id: "low",     name: "Low" } ]; %>

<div class="container">

    <!-- list overview -->
    <header class="jumbotron">
        <div class="container">

            <!-- list overview: page title / list size / last update date -->
            <h1>Welcome To "<%= list.name %>" List!</h1>
            <p> size: <%= list.tasks.length %> </p>
            <p> lastUpdateDate: <%= list.lastUpdateDate  %> </p> <!-- todo: update also in tasks updates -->

            <!-- add task / edit list / delete list buttons -->
            <div style="display: flex;">
                <a class="btn btn-primary" href="/lists/<%= list._id %>/tasks/new">Add New Task</a>
                <a class="btn btn-xs btn-warning" href="/lists/<%= list._id %>/edit">Edit List</a>
                <form class="delete-form" action="/lists/<%= list._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-xs btn-danger">Delete List</button>
                </form>
            </div>

        </div>
    </header>

    <!-- list tasks -->
    <div class="row row-cols-1 row-cols-md-3">

        <% statusOptions.forEach(function(status){ %>

        <div class="col">

            <div class="d-flex flex-row my-2">

                <!-- title of col todo: use "p" instead of "button" -->
                <div>
                    <button type="button" class="btn btn-md status-btn-title status-btn-<%= status.id %>">
                        <%= status.name %>
                    </button>
                </div>

                <!-- num of tasks in col todo: use "p" instead of "button" -->
                <div>
                    <button type="button" class="btn btn-md status-btn-number">
                        <%= 
                        list.tasks.filter(function(task){ 
                            return task.status === status.name;
                        }).length;
                    %>
                    </button>
                </div>

                <!-- add task "+" buttom -->
                <div class="ml-auto">
                    <form action="/lists/<%= list._id %>/tasks/new_task" method="POST">
                        <input type="hidden" name="status" value="<%= status.id %>">
                        <button type="submit" class="btn btn-sm status-btn-plus">
                            <i class="fas fa-plus"></i>
                        </button>
                    </form>
                </div>

            </div>

            <% list.tasks.forEach(function(task){ %>
            <% if (task.status === status.name) { %>
            <div class="card mb-4">
                <div class="card-body">

                    <!-- task title / description / status / priority -->
                    <h5 class="card-title"><%= task.title %></h5>
                    <p class="card-text">description: <%= task.description %></p>
                    <p class="card-text">status: <%= task.status %></p>
                    <p class="card-text <%= task.priority %>">priority: <%= task.priority %></p>

                    <!-- edit task / delete task buttons -->
                    <div style="display: flex;">
                        <a class="btn btn-xs btn-warning"
                            href="/lists/<%=list._id %>/tasks/<%=task._id %>/edit">Edit</a>
                        <form class="delete-form" action="/lists/<%=list._id %>/tasks/<%=task._id %>?_method=DELETE"
                            method="POST">
                            <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                        </form>
                    </div>
                </div>

                <!-- task due date -->
                <div class="card-footer">
                    <small class="text-muted">Dua Date: <%= task.dueDate %></small>
                </div>

            </div>
            <% } %>
            <% }) %>

        </div>
        <% }) %>
    </div>

</div>

<%- include ("../partials/footer"); %>