<%- include ("../partials/header"); %>

<div class="container">
    <h1 style="text-align: center">Add New Task to <%= list.name %> List </h1>
    <div class="row">
        <div>
            <form action="/lists/<%= list._id %>/tasks" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="task[title]" placeholder="task title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="task[description]" placeholder="task description">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/lists/<%= list._id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer"); %>